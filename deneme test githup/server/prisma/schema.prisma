// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum OrderStatus {
  HAZIRLANIYOR
  TESLIM_EDILDI
}

enum PaymentStatus {
  ONDEN_ODEME_ALINDI
  TAHSIL_EDILMEDI
  TESLIM_ANINDA
  VERESIYE
}

enum InvoiceStatus {
  KESILDI
  ISTEMIYOR
  GEREK_YOK
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String?
  address   String?
  orders    Order[]
  createdAt DateTime @default(now())
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  active    Boolean  @default(true)
  orderItems OrderItem[]
  createdAt DateTime @default(now())
}

model Order {
  id             Int            @id @default(autoincrement())
  customerId     Int
  customer       Customer       @relation(fields: [customerId], references: [id])
  status         OrderStatus    @default(HAZIRLANIYOR)
  paymentStatus  PaymentStatus  @default(TAHSIL_EDILMEDI)
  invoiceStatus  InvoiceStatus  @default(GEREK_YOK)
  note           String?
  items          OrderItem[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model OrderItem {
  id        Int     @id @default(autoincrement())
  orderId   Int
  productId Int
  quantity  Int
  order     Order   @relation(fields: [orderId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
}
